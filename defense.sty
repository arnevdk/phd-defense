% Commands ====================================================================

\newcommand{\schema}[1]{%
  %\frametitle{The Brain-Computer Interface (BCI)}
  \begin{tikzpicture}[remember picture, overlay]
    \node[anchor=center,inner sep=0] at (current page.center) {%
      \includegraphics[width=\paperwidth]{#1}
    };
  \end{tikzpicture}
}


% Define the \aside command
\newcommand{\aside}[1]{%
    \begin{tikzpicture}[remember picture, overlay]
        % Single node with rectangle and content
        \node[
            anchor=north east,
            inner sep=.05\paperwidth,
            text width=0.25\paperwidth,
            align=left,
            fill=mylightgray,
            draw=none,
            minimum height=\paperheight,
            text=darkgray
          ] at (current page.north east)
          {\parbox{.25\paperwidth}{\small\raggedright#1}};
    \end{tikzpicture}%
}

\newcommand{\outline}[2]{
{%
  \setbeamercolor{background canvas}{bg=mylightgray}
  \begin{frame}
  \frametitle{#1}
  \schema{#2}
  \end{frame}
}
  }

